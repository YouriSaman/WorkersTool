@model ShowScheduleViewModel

<h1>Mijn rooster</h1>

<div class="col-md-12">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <select class="form-control">
            @foreach (var week in Model.Weeks)
            {
                <option value="@week.Weeknumber">Week @week.Weeknumber</option>
            }
        </select>
    </div>
    <div class="col-md-3"></div>
</div>

<table class="center">    
    <tr>
        <th class="padding-left-right10">Maandag <i>@Model.Days[0].Date.ToString("d")</i></th>
        <th class="padding-left-right10">Dinsdag <i>@Model.Days[1].Date.ToString("d")</i></th>
        <th class="padding-left-right10">Woensdag <i> @Model.Days[2].Date.ToString("d")</i></th>
        <th class="padding-left-right10">Donderdag <i>@Model.Days[3].Date.ToString("d")</i></th>
        <th class="padding-left-right10">Vrijdag <i>@Model.Days[4].Date.ToString("d")</i></th>
        <th class="padding-left-right10">Zaterdag <i>@Model.Days[5].Date.ToString("d")</i></th>
        <th class="padding-left-right10">Zondag <i>@Model.Days[6].Date.ToString("d")</i></th>
    </tr>
    <tr>
        @for (int i = 0; i < 7; i++) //Dagen in de week
        {
            <td class="padding-left-right10">
                @for (int j = 0; j < 1; j++) //1 moet counter worden aan de hand van shifts al meerdere shifts op een dag kunnen
                {
                    <div class="shift-part">
                        <time>@Model.Days[i].Shifts[j].StartTime</time>

                        <input hidden type="datetime" asp-for="@Model.Days[i].Date"/>
                        <input id="InputUserId" hidden type="number" asp-for="@Model.Days[i].Shifts[j].UserId" value="0"/>
                        <div class="input-group">
                            <input class="form-control" type="time" asp-for="@Model.Days[i].Shifts[j].StartTime"/>
                            <span class="input-group-addon ah-background">
                                <span class="color-white font-size11"><b>tot</b></span>
                            </span>
                        </div>
                        <div class="input-group">
                            <input class="form-control" type="time" asp-for="@Model.Days[i].Shifts[j].EndTime"/>
                            <span class="input-group-addon ah-background">
                                <a class="white-link"><span class="glyphicon glyphicon-plus"></span></a>
                            </span>
                        </div>
                    </div>
                }
            </td>
        }
    </tr>
</table>